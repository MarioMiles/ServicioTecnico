{% extends 'base.html.twig' %}

{% block title %}Incidencias{% endblock %}

{% block body %}
    {{ parent() }}
    <h1 style="color:black;margin-left: 400px;">Incidencias</h1>
    <br><br>
    {% for incidencia in incidencias %}
        <div class="incidencia" style="background-color: black; width: 20%; margin-left: 400px;">
            <h4><a href="{{  path('ver_incidencia',{id:incidencia.id}) }}">{{ incidencia.titulo }}</a><br>
                Borrar incidencia:
                <a href="{{ path('borrar_incidencia',{id:incidencia.id}) }}">X</a></h4>
        </div>
        <br>
    {% else %}
        No se ha encontrado ninguna incidencia
    {% endfor %}
    <div style="clear:both;"></div>
    {%  if app.user %}
        <a href="{{ path('insertar_incidencia') }}" class="btn btn-primary" role="button" style="margin-left: 400px;">Insertar Incidencia</a>
    {% endif %}
{% endblock %}
